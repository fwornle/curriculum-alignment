{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "lambda/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".aws-sam",
    "frontend"
  ]
}