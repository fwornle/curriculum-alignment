# =========================================
# Curriculum Alignment System Environment Configuration
# =========================================

# =========================================
# Database Configuration (PostgreSQL)
# =========================================
# Supabase Configuration (Recommended for free tier)
DATABASE_URL=postgresql://username:password@db.supabase.co:5432/postgres
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Alternative: Neon Configuration
# DATABASE_URL=postgresql://username:password@ep-name.region.neon.tech/dbname
# NEON_DATABASE_URL=postgresql://username:password@ep-name.region.neon.tech/dbname

# Database Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=30000
DB_POOL_IDLE_TIMEOUT=600000

# =========================================
# AWS Configuration
# =========================================
AWS_REGION=eu-central-1
AWS_ACCOUNT_ID=930500114053

# S3 Configuration
S3_BUCKET_DOCUMENTS=curriculum-alignment-documents-dev
S3_BUCKET_STATIC=curriculum-alignment-static-dev

# Lambda Configuration
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY=1024

# =========================================
# Vector Database (Qdrant)
# =========================================
QDRANT_URL=https://your-cluster-id.qdrant.tech
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=curriculum_embeddings

# =========================================
# Authentication (AWS Cognito)
# =========================================
COGNITO_USER_POOL_ID=eu-central-1_xxxxxxxxx
COGNITO_USER_POOL_CLIENT_ID=your-client-id
COGNITO_IDENTITY_POOL_ID=eu-central-1:your-identity-pool-id

# =========================================
# LLM API Keys (Stored in AWS Secrets Manager)
# =========================================
# These should be stored in AWS Secrets Manager, not in .env files
# Listed here for reference only - use AWS Secrets Manager in production

# OpenAI
OPENAI_API_KEY=sk-your-openai-key

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Grok (xAI)
GROK_API_KEY=gsk_your-grok-key

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# =========================================
# Application Configuration
# =========================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Frontend Configuration
REACT_APP_API_URL=https://api.curriculum-alignment.dev
REACT_APP_WS_URL=wss://ws.curriculum-alignment.dev

# =========================================
# Cost Tracking
# =========================================
MAX_MONTHLY_COST_USD=500
COST_ALERT_THRESHOLD=0.8
COST_TRACKING_ENABLED=true

# =========================================
# Monitoring and Logging
# =========================================
CLOUDWATCH_LOG_GROUP=/aws/lambda/curriculum-alignment
CLOUDWATCH_LOG_RETENTION_DAYS=14

# =========================================
# Development Settings
# =========================================
DEBUG=true
ENABLE_CORS=true
RATE_LIMIT_ENABLED=false

# =========================================
# Security Settings
# =========================================
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key
SESSION_SECRET=your-session-secret

# =========================================
# WebSocket Configuration
# =========================================
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# =========================================
# File Processing
# =========================================
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,xlsx,doc,xls
UPLOAD_TIMEOUT_MS=300000

# =========================================
# Cache Configuration
# =========================================
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=100
ENABLE_CACHE=true